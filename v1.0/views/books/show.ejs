<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Finer Things Club</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>    
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src=" <%= book.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Best Book(amazon link)</h4>
                    <h4><a><%= book.name %></a></h4>
                    <p> <%= book.description %></p>
                    <p>
                        <em>Submitted by: <%= book.author.username %></em>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                  <a class="btn btn-success" href="/books/<%= book._id %>/comments/new">Add New Comment</a>  
                </div>
                <hr>
                        <% book.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right"> 10 days ago</span>
                                <p>
                                    <%=comment.text %>
                                </p>
                            </div>
                        </div>
                        <% }); %>
            </div>
        </div>
    </div> 
</div>    
        
        
       
        
        
        <% include ../partials/footer %>
</div>